---
import '../styles.css';
import Header from "../components/Header.jsx";
import ProjectCard from "../components/ProjectCard.jsx";
import AboutSection from "../components/AboutSection.jsx";
import ContactSection from "../components/ContactSection.jsx";
import SkillsSection from '../components/SkillsSection.jsx';
import DecryptedText from '../../@/components/DecryptedText.jsx';
import LiquidEther from '../../@/components/LiquidEther';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Aravind | Full Stack Developer</title>
    <meta name="description" content="Aravind R - A full stack developer creating performant and beautiful web experiences" />
    <script is:inline>
      const isDark = localStorage.getItem('darkMode') === 'true' || 
                    (!('darkMode' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches);
      document.documentElement.classList.toggle('dark', isDark);
    </script>
  </head>
  <body class="min-h-screen bg-background text-foreground font-sans antialiased">
    <div class="relative flex min-h-screen flex-col items-center text-center space-y-8">
    
    <LiquidEther client:load
      colors={[ '#5227FF', '#FF9FFC', '#B19EEF' ]}
      mouseForce={20}
      cursorSize={100}
      isViscous={false}
      viscous={30}
      iterationsViscous={32}
      iterationsPoisson={32}
      resolution={0.5}
      isBounce={false}
      autoDemo={true}
      autoSpeed={0.5}
      autoIntensity={2.2}
      takeoverDuration={0.25}
      autoResumeDelay={3000}
      autoRampDuration={0.6}
      style={{ position: 'fixed', top: 0, left: 0, width: '100vw', height: '100vh'}}
    />
      <!-- <div class="relative flex min-h-screen flex-col" > -->

      <Header client:load />
      
      <main class="flex-1">
        <section class="container py-24 sm:py-32 relative overflow-hidden">
          <div class="absolute inset-0 w-full h-full z-0">
          </div>
          <div class="relative z-10 flex flex-col items-center text-center space-y-8">
            <div class="space-y-4">
              <h1 class="text-4xl font-bold tracking-tighter sm:text-5xl md:text-6xl lg:text-7xl">
              <DecryptedText client:load
              text="Hello, I'm"
              animateOn="view"
              revealDirection="start"
              sequential={true}
              speed={60}
            />
					 <span class="text-4xl font-bold tracking-tighter sm:text-5xl md:text-6xl lg:text-7xl bg-gradient-to-r from-blue-600 to-blue-400 dark:from-blue-400 dark:to-blue-600 bg-clip-text text-transparent">
            <DecryptedText client:load
              text="Aravind"
              animateOn='both'
              revealDirection="end"
              sequential={true}
              speed={100}
            />
            </span>
            </h1>

				<h1 class="">
				</h1>
				<p class="mx-auto max-w-[700px] text-zinc-700 md:text-xl dark:text-zinc-300">
				A Senior Site Reliability Engineer specializing in observability, automation, and full stack development.
				</p>
            </div>
          </div>
        </section>

        <section id="projects" class="container py-24 sm:py-32">
          <div class="space-y-8">
            <div class="space-y-4">
              <h2 class="text-3xl font-bold tracking-tighter sm:text-4xl">Featured Projects</h2>
              <p class="text-muted-foreground md:text-lg">Selected enterprise and personal projects showcasing my expertise in SRE, automation, and full-stack development.</p>
            </div>
            <div class="grid grid-cols-1 gap-8 md:grid-cols-2">
              <ProjectCard 
                client:visible
                title="SRE AI Assistant"
                description="Engineered an AI assistant integrating ServiceNow APIs, Akamai Fast Purge API, and GCP logs with Ford's native LLM, reducing incident resolution time by 30%. Built with Python and MS Copilot Studio."
                githubUrl="https://github.com/aravindr31"
              />
              <ProjectCard 
                client:visible
                title="Akamai Infrastructure Automation"
                description="Developed end-to-end automation for Application Load Balancing and Edge Redirect Cloudlets using custom Ansible modules. Integrated with Ansible Tower for user-friendly management."
                githubUrl="https://github.com/aravindr31"
              />
              <ProjectCard 
                client:visible
                title="SRE CICD Pipeline"
                description="Built comprehensive Jenkins & Tekton pipelines with Sonarqube, OWASP security checks, automated ServiceNow change management, and Kubernetes deployments."
                githubUrl="https://github.com/aravindr31"
              />
              <ProjectCard 
                client:visible
                title="Unified SLO Dashboard"
                description="Created a Next.js dashboard for real-time monitoring of SLOs and error budgets across core products, improving system reliability tracking and decision-making."
                githubUrl="https://github.com/aravindr31"
              />
            </div>
          </div>
        </section>
        <div>
        <AboutSection client:visible />
        <SkillsSection client:visible />
        <ContactSection client:visible />
        </div>
      </main>
      
      <footer class="py-6 border-t mx-auto w-full">
        <div class="container flex flex-col items-center justify-between gap-4 md:h-24 md:flex-row">
          <p class="text-center text-sm leading-loose text-muted-foreground md:text-left">
            Built with <a href="https://astro.build" target="_blank" rel="noopener noreferrer" class="font-medium underline underline-offset-4">Astro</a> and 
            <a href="https://ui.shadcn.com" target="_blank" rel="noopener noreferrer" class="font-medium underline underline-offset-4">shadcn/ui</a>. 
            {new Date().getFullYear()} Â© Aravind.
          </p>
        </div>
      </footer>
    </div>
    <!-- </div> -->

  </body>
</html>